<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  设置色  -->
    <item  android:id="@android:id/background" >
        <shape>
            <corners android:radius="3dip" />
            <gradient android:startColor="@color/textNoSel"
                android:endColor="@color/textNoSel" />
        </shape>
    </item>

    <!--  设置进度条颜色 -->
    <item  android:id="@android:id/progress" >
        <clip>
            <shape>
                <corners android:radius="3dip" />
                <gradient  android:startColor="@color/textSel"
                    android:endColor="@color/textSel" />
            </shape>
        </clip>
    </item>

</layer-list>