<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--密码登录-->
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/pwd_login"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="40dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:text="手机号"/>
            <EditText
                android:layout_marginLeft="15dp"
                android:paddingLeft="10dp"
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:inputType="number"
                android:layout_gravity="center_vertical"
                android:background="@drawable/radius_shape"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="40dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:text="密码"/>
            <EditText
                android:layout_marginLeft="15dp"
                android:paddingLeft="10dp"
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:inputType="textPassword"
                android:layout_gravity="center_vertical"
                android:background="@drawable/radius_shape"/>
        </LinearLayout>

        <TextView
            android:onClick="verLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="验证码登录"
            android:textSize="15sp"
            android:textColor="#00f"/>

        <Button
            android:onClick="login"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:layout_width="150dp"
            android:layout_marginLeft="6dp"
            android:layout_height="30dp"
            android:text="登录"
            android:layout_gravity="center"
            android:background="@drawable/radius_shape_but_blue"/>
    </LinearLayout>

    <!--注册-->
    <LinearLayout
        android:id="@+id/register"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="40dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:text="手机号"/>
            <EditText
                android:layout_marginLeft="15dp"
                android:paddingLeft="10dp"
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:inputType="number"
                android:layout_gravity="center_vertical"
                android:background="@drawable/radius_shape"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="40dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:text="密码"/>
            <EditText
                android:layout_marginLeft="15dp"
                android:paddingLeft="10dp"
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:inputType="number"
                android:layout_gravity="center_vertical"
                android:background="@drawable/radius_shape"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="40dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:text="验证码"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <EditText
                    android:id="@+id/verify"
                    android:layout_marginLeft="15dp"
                    android:paddingLeft="10dp"
                    android:layout_width="210dp"
                    android:layout_height="30dp"
                    android:inputType="number"
                    android:background="@drawable/radius_shape"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignRight="@id/verify"
                    android:onClick="sendCode"
                    android:text="发送验证码"
                    android:background="@drawable/radius_shape_but_blue"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:gravity="center_horizontal">
            <CheckBox
                android:id="@+id/agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:checked="true"
                android:text="我已阅读同意遵守"/>

            <TextView
                android:id="@+id/pwd_login_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="《xxxx服务协议》"
                android:textSize="15sp"
                android:textColor="#00f"/>
        </LinearLayout>

        <Button
            android:id="@+id/submit_register"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:layout_width="150dp"
            android:layout_marginLeft="6dp"
            android:layout_height="30dp"
            android:text="注册"
            android:layout_gravity="center"
            android:background="@drawable/radius_shape_but_blue"/>
    </LinearLayout>

    <!--验证码登录-->
    <LinearLayout
        android:id="@+id/ver_login"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="40dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:text="手机号"/>
            <EditText
                android:layout_marginLeft="15dp"
                android:paddingLeft="10dp"
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:inputType="number"
                android:layout_gravity="center_vertical"
                android:background="@drawable/radius_shape"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="40dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:text="验证码"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <EditText
                    android:id="@+id/verify1"
                    android:layout_marginLeft="15dp"
                    android:paddingLeft="10dp"
                    android:layout_width="210dp"
                    android:layout_height="30dp"
                    android:inputType="number"
                    android:background="@drawable/radius_shape"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:onClick="sendCode"
                    android:layout_alignRight="@id/verify1"
                    android:text="发送验证码"
                    android:background="@drawable/radius_shape_but_blue"/>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="密码登录"
            android:onClick="pwdLogin"
            android:textSize="15sp"
            android:textColor="#00f"/>

        <Button
            android:onClick="login"
            android:layout_marginTop="50dp"
            android:layout_width="150dp"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="10dp"
            android:layout_height="30dp"
            android:text="登录"
            android:layout_gravity="center"
            android:background="@drawable/radius_shape_but_blue"/>
    </LinearLayout>
</LinearLayout>