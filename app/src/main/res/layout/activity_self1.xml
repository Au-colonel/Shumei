<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="colonel.com.shumei.Self1Activity">

    <!-- 头部 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#F4F4F4">
        <RelativeLayout
            android:layout_width="50dp"
            android:id="@+id/back"
            android:onClick="back"
            android:background="#f4f4f4"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/back"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:textSize="18sp"
           android:layout_marginLeft="100dp"
           android:text="我的资料"/>
    </LinearLayout>


    <!-- name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:textColor="#ff0000"
            android:text="*"/>
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:text="姓名:"/>
        <EditText
            android:layout_marginLeft="50dp"
            android:paddingLeft="10dp"
            android:layout_width="210dp"
            android:layout_height="30dp"
            android:inputType="text"
            android:layout_gravity="center_vertical"
            android:background="@drawable/radius_shape"/>
    </LinearLayout>

    <!-- sex -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:textColor="#ff0000"
            android:text="*"/>
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:text="性别:"/>
        <EditText
            android:layout_marginLeft="50dp"
            android:paddingLeft="10dp"
            android:layout_width="210dp"
            android:layout_height="30dp"
            android:inputType="text"
            android:layout_gravity="center_vertical"
            android:background="@drawable/radius_shape"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:textColor="#ff0000"
            android:text="*"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:text="驾驶证编号:"/>
        <EditText
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:layout_width="210dp"
            android:layout_height="30dp"
            android:inputType="text"
            android:layout_gravity="center_vertical"
            android:background="@drawable/radius_shape"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:textColor="#ff0000"
            android:text="*"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:text="身份证号:"/>
        <EditText
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:layout_width="210dp"
            android:layout_height="30dp"
            android:inputType="text"
            android:layout_gravity="center_vertical"
            android:background="@drawable/radius_shape"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:textColor="#ff0000"
            android:text="*"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:text="手机号:"/>
        <EditText
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:layout_width="210dp"
            android:layout_height="30dp"
            android:inputType="text"
            android:layout_gravity="center_vertical"
            android:background="@drawable/radius_shape"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:textColor="#ff0000"
            android:text="*"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:text="地区:"/>
        <TextView
            android:id="@+id/tv_value"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:layout_width="210dp"
            android:layout_height="30dp"
            android:inputType="text"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/self_arrow_down"
            android:background="@drawable/radius_shape_tv_white"/>
    </LinearLayout>

    <Button
        android:id="@+id/confirm"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_height="40dp"
        android:text="确认修改"
        android:background="@drawable/radius_shape_but_blue"
        />


</LinearLayout>
